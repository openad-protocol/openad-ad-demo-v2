{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "paths": {
      "@/": ["./public/*"],
      "@utils/": ["./public/utils/*"],
      "@App/": ["./*"],
    },
    "allowJs": true
  },
  "include": [
    "public/**/*.vue",
    "public/**/*",
    "public/**/*.ts",
    "public/**/*.tsx"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}